<Window x:Class="PracticaLayouts.winTabControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaLayouts"
        mc:Ignorable="d"
        Title="winTabControl" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0" >
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF76FF00" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TabControl Margin="110,34,110,62">
            <TabItem Header="Coches">
                <Grid Background="#FFE5E5E5" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <RadioButton x:Name="rbCochazo" Content="Cochazo" Margin="20,77,20,214"/>
                    <RadioButton x:Name="rbAsequible" Content="Asequible" Margin="20,126,20,165"/>
                    <RadioButton x:Name="rbAceptable" Content="Aceptable" Margin="20,179,20,111"/>
                    <Label Content="¿Cuál es el tuyo?" Margin="20,31,10,250" FontWeight="Bold"/>
                    <Image Grid.Column="1" HorizontalAlignment="Center" Height="155" Margin="0,62,0,0" VerticalAlignment="Top" Width="363" Source="/audi.jpg"/>
                </Grid>
            </TabItem>
            <TabItem Header="Pelis">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="¿Cuál te gusta más? " Margin="10,102,49,182" FontWeight="Bold"/>
                    <ComboBox Name="cbPelis" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top" Width="156">
                        <ComboBoxItem Content="La Guerra de las Galaxias"/>
                        <ComboBoxItem Content="Alien: El 8º pasajero"/>
                        <ComboBoxItem Content="Blade Runner"/>
                    </ComboBox>
                    <Image Name="imPelis" Grid.Column="1" HorizontalAlignment="Left" Height="246" Margin="119,0,0,0" VerticalAlignment="Center" Width="163" Source="/starwars.jpg"/>


                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
